<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link href="~/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/font-awesome/css/font-awesome.css" rel="stylesheet">
    <link href="~/css/animate.css" rel="stylesheet">
    <link href="~/css/style.css" rel="stylesheet">
    <style>
        body {
            background-image: url("../../img/comilla-medical-college-and-hospital-gate.jpg");
            height: 100%;
            background-repeat: no-repeat;
            background-position: center;
            background-size: cover;
        }
    </style>
</head>
<body class="gray-bg">
    <div class="middle-box text-center loginscreen animated fadeInDown">
        <h3 style="color:red">Welcome to Dotnet App</h3>
        <form class="m-t" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <input type="text" class="form-control" placeholder="Username" required="" name="Name">
            </div>
            <div class="form-group">
                <input type="password" class="form-control" placeholder="Password" required="" name="Password">
            </div>
            <button type="submit" class="btn btn-primary block full-width m-b">Login</button>
            <a href="#" style="color:red">Forgot password?></a>
            <p class="text-center" style="color:red">Do not have an account?</p>
            @*<a class="btn btn-sm btn-white btn-block" href="register.html">Create an account</a>*@
        </form>
        @*<p class="m-t" style="color:red"> Inspinia we app framework base on Bootstrap 3 &copy; 2022 </p>*@
    </div>
    <!-- Mainly scripts -->
    <script src="~/js/jquery-3.1.1.min.js"></script>
    <script src="~/js/popper.min.js"></script>
    <script src="~/js/bootstrap.js"></script>
</body>
</html>
